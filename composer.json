{
  "name": "ishanto/cognito-token",
  "description": "Lightweight JWT token management for cognito.",
  "type": "library",
  "version": "1.0.0-beta",
  "license": "MIT",
  "authors": [
    {
      "name": "ishantoz",
      "email": "ishanto412@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/ishantoz/cognito-token"
    }
  ],
  "require": {
    "php": ">=7.4",
    "web-token/jwt-framework": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "IShanto\\Cognito\\Tokens\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000",
    "test": "vendor/bin/phpunit tests/CognitoTokenVerifierTest.php"
  },
  "minimum-stability": "beta",
  "prefer-stable": true,
  "require-dev": {
    "vlucas/phpdotenv": "^5.6",
    "phpunit/phpunit": "^12.1",
    "symfony/var-dumper": "^7.2"
  }
}
